<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context="com.example.sreet.learning.Documentupdate">


    <EditText
        android:id="@+id/SubName"
        android:layout_width="78dp"
        android:layout_height="40dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="67dp"
        android:hint="subject"
        android:padding="10dp"
        android:textColorLink="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Txrwin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Txrwin"
        android:layout_width="180dp"
        android:layout_height="40dp"

        android:layout_alignTop="@+id/SubName"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="File name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColorLink="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bb"
        app:layout_constraintStart_toEndOf="@+id/SubName"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bb"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/SubName"
        android:layout_toEndOf="@+id/Txrwin"
        android:alpha="0.35"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Txrwin"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/buttonbackground" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/SubName"
        android:layout_toEndOf="@+id/Txrwin"
        android:fontFamily="sans-serif"
        android:gravity="top|bottom"
        android:lineSpacingExtra="10sp"
        android:text="Upload"
        android:textAlignment="center"
        android:textColor="@color/cardview_dark_background"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Txrwin"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/selectbutton"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/SubName"
        android:layout_alignTop="@+id/textView4"
        android:alpha="0.35"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bb"
        app:srcCompat="@drawable/buttonbackground" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/SubName"
        android:layout_marginTop="119dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="top|bottom"
        android:lineSpacingExtra="10sp"
        android:text="Select"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/cardview_dark_background"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/SubName"
        android:layout_marginTop="32dp"
        android:text="Enter Details"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="14sp"
        android:textStyle="bold"
        android:typeface="monospace" />

</android.widget.RelativeLayout>
